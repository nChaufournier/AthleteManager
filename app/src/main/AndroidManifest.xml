<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepypirate.athletemanager"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_insert_invitation"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lifting.LiftActivity"
            android:label="Lifting Section"
            android:uiOptions="splitActionBarWhenNarrow">

        </activity>
        <activity android:name=".schedule.ScheduleActivity"
            android:label="Schedule Section">

        </activity>
        <activity android:name=".schedule.AddEvent"
            android:label="Create an Event">

            </activity>
        
    </application>
    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

</manifest>
