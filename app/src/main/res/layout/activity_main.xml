<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="5">
    <TextView
        android:id="@+id/tvManage"
        android:text="Manange Your Life"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@color/primary_material_dark"/>
    <LinearLayout
        android:id="@+id/topButtonSection"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/primary_material_dark"
        >

        <Button
            android:id="@+id/btnLifts"
            android:text="Lifts"
            android:padding="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:scaleType="fitXY"
            android:contentDescription="Button to Schedule"
            android:src="@drawable/ic_action_event"
            android:id="@+id/btnSchedule"
            android:layout_below="@id/btnLifts"
            android:text="Schedule"
            android:padding="30dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnFood"
            android:text="Food"
            android:padding="30dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottomUpdates"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ListView
            android:id="@+id/lvUpdates"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></ListView>
        </RelativeLayout>
</LinearLayout>
